enum SocialPlatform {
  TIKTOK
  INSTAGRAM
  YOUTUBE
  // TWITTER
  // FACEBOOK
}

// Modifikasi BotThreshold
model BotThreshold {
  id                  String   @id @default(cuid())
  name                String   @unique // e.g., "tiktok_daily_view_increase_threshold", "global_like_view_ratio"
  platform            SocialPlatform? // Bisa spesifik per platform
  metricType          String   // e.g., "DAILY_VIEW_INCREASE", "LIKE_VIEW_RATIO", "COMMENT_VIEW_RATIO", "VIEW_SPIKE_FACTOR"

  mean                Float?   @map("mean_mu")
  stdDev              Float?   @map("std_dev_sigma")

  lowerBound          Float?   @map("lower_bound")
  upperBound          Float?   @map("upper_bound")

  levelAMultiplier    Float?   @default(3.0) @map("level_a_multiplier")
  levelBMinMultiplier Float?   @default(2.0) @map("level_b_min_multiplier")
  levelBMaxMultiplier Float?   @default(3.0) @map("level_b_max_multiplier")

  analysisWindow      Int?     @map("analysis_window_hours")

  description         String?
  isActive            Boolean  @default(true) @map("is_active")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  @@map("bot_thresholds")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}
